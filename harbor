#!/usr/bin/env bash
if [ -f harbor ] && [ $# -eq 0  ]; then
	echo "Dir already harbor ready, use \"harbor update\" to update"
	exit 1
fi
if [ $# -eq 0 ]; then
	git archive --remote=ssh://git@bitbucket.org/TRIAD-Advertising/harbor.git --format=zip --output="harbor.zip" master
	unzip -a -u -q harbor.zip -x ".gitignore"
	rm -rf harbor.zip
elif [ "$1" == "update" ]; then
	git archive --remote=ssh://git@bitbucket.org/TRIAD-Advertising/harbor.git --format=zip --output="harbor.zip" master
	unzip -a -u -q harbor.zip -x ".gitignore" 
	rm -rf harbor.zip
else
    ./harbor "$@"
fi
